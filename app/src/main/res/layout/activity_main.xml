<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".activity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/barrierEditedView"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="30"
        android:background="@color/white"
        tools:listitem="@layout/card_post_layout"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/editedModeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="editedTextView, editIcon, textEditMessage,closeEditMode, barrierEditedView" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierEditedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="textEditMessage, editedTextView, closeEditMode, editIcon" />

    <ImageView
        android:id="@+id/editIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/barrierForEditPoly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textEditMessage"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textEditMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="@string/edit_message"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/editedTextView"
        app:layout_constraintEnd_toStartOf="@+id/closeEditMode"
        app:layout_constraintStart_toStartOf="@id/editedTextView"
        tools:text="Edit Message" />

    <TextView
        android:id="@+id/editedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="@string/netology"
        android:textColor="#66FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/barrierForEditPoly"
        app:layout_constraintEnd_toStartOf="@+id/closeEditMode"
        app:layout_constraintStart_toEndOf="@id/editIcon"
        tools:text="Netology" />

    <ImageView
        android:id="@+id/closeEditMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@id/editedTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/textEditMessage"
        app:tint="@color/white" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierForEditPoly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="content, lineWithBlackBackground, save" />

    <TextView
        android:id="@+id/lineWithBlackBackground"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/barrierForEditPoly" />

    <EditText
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@null"
        android:hint="@string/app_name"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#66FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_task_alt_24"
        app:layout_constraintBottom_toBottomOf="@+id/content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/content"
        app:layout_constraintTop_toTopOf="@id/content"
        tools:ignore="ContentDescription"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>